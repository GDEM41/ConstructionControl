<Window x:Class="ConstructionControl.ExportModeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Экспорт" Height="200" Width="300" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            
            <RadioButton Name="Merged" Content="Объединённый" Margin="3"/>
            <RadioButton Name="Detailed" Content="Подробный" Margin="3"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="OkButton" Width="80" Margin="5" Content="OK" Click="OkButton_Click"/>
            <Button Width="80" Margin="5" Content="Отмена" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
