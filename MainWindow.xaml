<Window x:Class="ConstructionControl.MainWindow"
        x:Name="RootWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ConstructionControl"
        Title="Журнал входного контроля"
        Height="700"
        Width="1300"
        Background="#F6F7FB"
         Loaded="MainWindow_Loaded">

    <!-- ================= СТИЛИ ================= -->
    <Window.Resources>

        <Style x:Key="ChipToggle" TargetType="ToggleButton">
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="4,4,4,4"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="Foreground" Value="#111827"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="root"
                        CornerRadius="6"
                        BorderThickness="1"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="root" Property="Background" Value="#2563EB"/>
                                <Setter TargetName="root" Property="BorderBrush" Value="#1E40AF"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="SummaryFilterToggle" TargetType="ToggleButton">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Bd"
                                CornerRadius="10"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ContentPresenter VerticalAlignment="Center"/>
                                <Border x:Name="ArrowBg"
                                        Grid.Column="1"
                                        Width="28"
                                        Height="28"
                                        CornerRadius="6"
                                        Background="#F3F4F6"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center">
                                    <TextBlock Text="▾"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Foreground="#6B7280"/>
                                </Border>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#F9FAFB"/>
                                <Setter TargetName="ArrowBg" Property="Background" Value="#E5E7EB"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#93C5FD"/>
                                <Setter TargetName="Bd" Property="Background" Value="#EFF6FF"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SummaryFilterRadio" TargetType="RadioButton">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="Bd"
                                Background="#F3F4F6"
                                BorderBrush="#D1D5DB"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="10,6">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#2563EB"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#1D4ED8"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#E5E7EB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <!-- Кнопка основная -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Height" Value="34"/>
            <Setter Property="MinWidth" Value="110"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0,0,6,0"/>
        </Style>

        <!-- Кнопка вторичная -->
        <Style x:Key="SecondaryButton" TargetType="Button"
               BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#E5E7EB"/>
            <Setter Property="Foreground" Value="#111827"/>
        </Style>
        <!-- Toolbar кнопка -->
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Width" Value="34"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>

        <!-- Toolbar кнопка -->
        <Style x:Key="IconToggle" TargetType="ToggleButton">
            <Setter Property="Width" Value="34"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>

        <Style x:Key="OtDueRowStyle" TargetType="DataGridRow">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsPendingRepeat}" Value="True">
                    <Setter Property="Background" Value="#FFF7C2"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsRepeatCompleted}" Value="True">
                    <Setter Property="Background" Value="#DCFCE7"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>



    </Window.Resources>

    <Grid>
        <DockPanel>

            <!-- ================= МЕНЮ ================= -->
        <Menu DockPanel.Dock="Top"
              Background="White"
              BorderThickness="0">
            <MenuItem Header="Создать" Click="CreateObject_Click"/>
            <MenuItem Header="Архив" Click="OpenArchive_Click" />

            <MenuItem Header="Настройки объекта" Click="ObjectSettings_Click"/>
            <MenuItem Header="Выход" Click="Exit_Click"/>
        </Menu>

        <!-- ================= TOOLBAR ================= -->
        <Border DockPanel.Dock="Top"
                Background="White"
                BorderBrush="#E5E7EB"
                BorderThickness="0,0,0,1"
                Padding="6">

            <ToolBar Background="Transparent">

                <Button Style="{StaticResource IconButton}"
                        ToolTip="Сохранить"
                        Click="SaveButton_Click">
                    💾
                </Button>

                <ToggleButton Style="{StaticResource IconToggle}"
              ToolTip="Блокировка"
              IsChecked="True"
              Checked="LockToggle_Checked"
              Unchecked="LockToggle_Unchecked">
                    🔒
                </ToggleButton>



                <Separator Margin="6,0"/>

                <Button x:Name="UndoButton"
        Style="{StaticResource IconButton}"
        Click="Undo_Click"
        IsEnabled="False">
                    ↩

                </Button>

                <Button x:Name="RedoButton"
        Style="{StaticResource IconButton}"
        Click="Redo_Click"
        IsEnabled="False">
                    ↪
                </Button>


                <Separator Margin="10,0"/>

                <Button Style="{StaticResource SecondaryButton}"
                        Click="ImportExcel_Click">
                    📥 Импорт Excel
                </Button>

            </ToolBar>
        </Border>

        <!-- ================= ОСНОВНАЯ ОБЛАСТЬ ================= -->
        <Grid Margin="10">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ===== ДЕРЕВО ===== -->
            <Border Background="White"
                    CornerRadius="8"
                    Padding="6"
                    BorderBrush="#E5E7EB"
                    BorderThickness="1">
                <TreeView x:Name="ObjectsTree"
                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                          ScrollViewer.HorizontalScrollBarVisibility="Auto"
                          SelectedItemChanged="ObjectsTree_SelectedItemChanged">

                    <TreeView.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Переименовать"
                                      Click="RenameTreeItem_Click"/>
                            <MenuItem Header="Удалить"
                                      Click="DeleteTreeItem_Click"/>
                        </ContextMenu>
                    </TreeView.ContextMenu>
                </TreeView>
            </Border>

            <!-- ===== КОНТЕНТ ===== -->
            <Border Grid.Column="1"
                    Background="White"
                    CornerRadius="8"
                    Padding="8"
                    Margin="10,0,0,0"
                    BorderBrush="#E5E7EB"
                    BorderThickness="1">


                <TabControl x:Name="MainTabs"
            BorderThickness="0"
            SelectionChanged="TabControl_SelectionChanged">


                    <!-- ===== СВОДНАЯ ===== -->
                    <TabItem Header="Сводная таблица">
                        <DockPanel>
                            <StackPanel DockPanel.Dock="Top"
                                        Margin="0,0,0,8">
                                <TextBlock Text="Типы для отображения"
                                           FontWeight="SemiBold"
                                           Foreground="#374151"
                                           Margin="0,0,0,6"/>
                                <Grid Width="260">
                                    <ToggleButton x:Name="SummaryFilterButton"
                                                  Style="{StaticResource SummaryFilterToggle}"
                                                  HorizontalContentAlignment="Left">
                                        <StackPanel>
                                            <TextBlock Text="Фильтр типов"
                                                       FontWeight="SemiBold"
                                                       Foreground="#111827"/>
                                            <TextBlock x:Name="SummaryFilterSubtitle"
                                                       Text="Все типы"
                                                       Foreground="#6B7280"
                                                       FontSize="12"/>
                                        </StackPanel>
                                    </ToggleButton>
                                    <Popup PlacementTarget="{Binding ElementName=SummaryFilterButton}"
                                           IsOpen="{Binding IsChecked, ElementName=SummaryFilterButton}"
                                           PopupAnimation="Fade"
                                           AllowsTransparency="True"
                                           StaysOpen="False">
                                        <Border Background="White"
                                                BorderBrush="#E5E7EB"
                                                BorderThickness="1"
                                                CornerRadius="10"
                                                Padding="12"
                                                MinWidth="260">
                                            <Border.Effect>
                                                <DropShadowEffect BlurRadius="12"
                                                                  ShadowDepth="2"
                                                                  Opacity="0.18"/>
                                            </Border.Effect>
                                            <StackPanel>
                                                <TextBlock Text="Показывать в сводной"
                                                           FontWeight="SemiBold"
                                                           Foreground="#111827"
                                                           Margin="0,0,0,6"/>
                                                <ScrollViewer MaxHeight="200"
                                                              VerticalScrollBarVisibility="Auto">
                                                    <StackPanel x:Name="SummaryTypeFilterPanel"/>
                                                </ScrollViewer>
                                               
                                            </StackPanel>
                                        </Border>
                                    </Popup>
                                </Grid>
                            </StackPanel>
                            <ListBox x:Name="SummaryPanel"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     HorizontalContentAlignment="Stretch"
                                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                                     ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                                                          ScrollViewer.CanContentScroll="False">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Padding" Value="0"/>
                                        <Setter Property="Margin" Value="0"/>
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                        <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListBoxItem">
                                                    <Border Background="{TemplateBinding Background}">
                                                        <ContentPresenter/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel/>
                                    </ItemsPanelTemplate>
                                </ListBox.ItemsPanel>
                            </ListBox>
                        </DockPanel>

                    </TabItem>

                    <TabItem Header="ЖВК">
                        <Grid>
                            <Grid.RowDefinitions>
                               
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,4,0,6">

                                <Button x:Name="MergeButton"
                    Style="{StaticResource SecondaryButton}"
                    Content="⇆ Объединить"
                    Margin="0,0,10,0"
                    Click="MergeButton_Click"/>

                                <Button Style="{StaticResource PrimaryButton}"
                    Click="ExportToExcel_Click">
                                    ⬇ Экспорт
                                </Button>
                            </StackPanel>

                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Border x:Name="JvkHeaderBorder"
                                        Grid.Row="0"
                                        Background="#F3F4F6"
                                        BorderBrush="#E5E7EB"
                                        BorderThickness="0,0,0,1"
                                        Padding="0">
                                    <Grid x:Name="JvkHeaderGrid">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="140"/>
                                            <ColumnDefinition Width="260"/>
                                            <ColumnDefinition Width="90"/>
                                            <ColumnDefinition Width="70"/>
                                            <ColumnDefinition Width="90"/>
                                            <ColumnDefinition Width="220"/>
                                            <ColumnDefinition Width="260"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0"
                                                BorderBrush="#E5E7EB"
                                                BorderThickness="0,0,1,0"
                                                Padding="6,4">
                                            <TextBlock Text="ттн"
                                                       FontWeight="SemiBold"
                                                       TextAlignment="Center"/>
                                        </Border>
                                        <Border Grid.Column="1"
                                                BorderBrush="#E5E7EB"
                                                BorderThickness="0,0,1,0"
                                                Padding="6,4">
                                            <TextBlock Text="название"
                                                           FontWeight="SemiBold"
                                                       TextAlignment="Center"/>
                                        </Border>
                                        <Border Grid.Column="2"
                                                BorderBrush="#E5E7EB"
                                                BorderThickness="0,0,1,0"
                                                Padding="6,4">
                                            <TextBlock Text="стб"
                                                       FontWeight="SemiBold"
                                                       TextAlignment="Center"/>
                                        </Border>
                                        <Border Grid.Column="3"
                                                BorderBrush="#E5E7EB"
                                                BorderThickness="0,0,1,0"
                                                Padding="6,4">
                                            <TextBlock Text="ед.изм"
                                                       FontWeight="SemiBold"
                                                       TextAlignment="Center"/>
                                        </Border>
                                        <Border Grid.Column="4"
                                                BorderBrush="#E5E7EB"
                                                BorderThickness="0,0,1,0"
                                                Padding="6,4">
                                            <TextBlock Text="кол-во"
                                                       FontWeight="SemiBold"
                                                       TextAlignment="Center"/>
                                        </Border>
                                        <Border Grid.Column="5"
                                                BorderBrush="#E5E7EB"
                                                BorderThickness="0,0,1,0"
                                                Padding="6,4">
                                            <TextBlock Text="поставщик"
                                                        FontWeight="SemiBold"
                                                       TextAlignment="Center"/>
                                        </Border>
                                        <Border Grid.Column="6"
                                                Padding="6,4">
                                            <TextBlock Text="паспорт"
                                                       FontWeight="SemiBold"
                                                       TextAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                </Border>

                                <ScrollViewer Grid.Row="1"
                                              VerticalScrollBarVisibility="Auto"
                                              HorizontalScrollBarVisibility="Auto"
                                              Margin="0,4,0,0">
                                    <StackPanel x:Name="JvkPanel"/>
                                </ScrollViewer>
                            </Grid>


                        </Grid>
                        <!-- ← ВАЖНО -->
                    </TabItem>



                    <TabItem Header="Приход">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="170*"/>
                                <ColumnDefinition Width="769*"/>
                            </Grid.ColumnDefinitions>

                            <!-- ====== КНОПКА ДОБАВИТЬ ПРИХОД ====== -->
                            <!-- ====== КНОПКИ ПРИХОДА ====== -->
                            <StackPanel Orientation="Horizontal"
    VerticalAlignment="Top"
    HorizontalAlignment="Right"
    Panel.ZIndex="1" Grid.Column="1">

                                <!-- 🔍 Локальный поиск -->
                                <TextBox x:Name="ArrivalSearchBox"
        Width="240"
        Height="32"
        VerticalContentAlignment="Center"
        FontSize="13"
        Margin="0,0,10,0"
        ToolTip="Поиск: наименование / ТТН"
        TextChanged="ArrivalSearchBox_TextChanged"/>

                                <!-- Кнопка фильтры -->
                                <Button x:Name="ArrivalFilterButton"
        Content="Фильтры"
        Width="130"
        Height="34"
        Margin="0,0,10,0"
        Click="ArrivalFilterButton_Click"/>

                                <Button Style="{StaticResource PrimaryButton}"
        Margin="0,0,10,0"
        Click="ExportArrival_Click">
                                    ⬇ Экспорт
                                </Button>


                                <!-- Кнопка добавления -->
                                <Button x:Name="ShowArrivalButton"
        Content="➕ Добавить приход"
        Width="200"
        Height="34"
        Click="ShowArrivalButton_Click"/>
                            </StackPanel>



                            <!-- ====== ТАБЛИЦА ПРИХОДОВ ====== -->
                            <DataGrid x:Name="ArrivalLiveTable"
                  Margin="0,50,0,0"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False" Grid.ColumnSpan="2">

                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Дата" Binding="{Binding Date, StringFormat=dd.MM.yyyy}" Width="80"/>
                                    <DataGridTextColumn Header="Тип" Binding="{Binding MaterialGroup}" Width="120"/>

                                    <DataGridTextColumn Header="Наименование" Binding="{Binding MaterialName}" Width="220"/>
                                    <DataGridTextColumn Header="Ед." Binding="{Binding Unit}" Width="60"/>
                                    <DataGridTextColumn Header="Кол-во" Binding="{Binding Quantity}" Width="80"/>
                                    <DataGridTextColumn Header="ТТН" Binding="{Binding Ttn}" Width="120"/>
                                    <DataGridTextColumn Header="Поставщик" Binding="{Binding Supplier}" Width="200"/>
                                </DataGrid.Columns>
                            </DataGrid>

                            <!-- ====== ОВЕРЛЕЙ ФИЛЬТРОВ ПРИХОДА ====== -->
                            <!-- ====== ОВЕРЛЕЙ ФИЛЬТРОВ ПРИХОДА ====== -->
                            <Grid x:Name="ArrivalFiltersOverlay"
      Visibility="Collapsed"
      Background="#80000000"
      Panel.ZIndex="50" Grid.ColumnSpan="2">

                                <Border Background="White"
            Padding="20"
            CornerRadius="10"
            Width="450"
            MinHeight="450"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">

                                    <StackPanel>

                                        <!-- Кнопка закрыть -->
                                        <Button Content="✖"
                    HorizontalAlignment="Right"
                    Width="28"
                    Height="28"
                    Background="Transparent"
                    BorderThickness="0"
                    FontSize="14"
                    Click="CloseArrivalFilters_Click"/>

                                        <TextBlock Text="Фильтры прихода"
                       FontWeight="SemiBold"
                       FontSize="16"
                       Margin="0,0,0,16"/>

                                        <!-- ====== ТИПЫ (ГРУППЫ) ====== -->
                                        <TextBlock Text="Тип материалов"
                       FontWeight="SemiBold"
                       Margin="0,0,0,4"/>

                                        <WrapPanel x:Name="ArrivalTypesPanel"
                       Margin="0,6,0,10"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Width="400"/>

                                        <!-- ====== КАТЕГОРИЯ ====== -->
                                        <TextBlock Text="Категория"
                       FontWeight="SemiBold"
                       Margin="0,10,0,6"/>

                                        <StackPanel>
                                            <CheckBox x:Name="ArrivalMainCheck"
                          Content="Основные"
                          IsChecked="True"
                          Checked="ArrivalFilters_Changed"
                          Unchecked="ArrivalFilters_Changed"/>

                                            <CheckBox x:Name="ArrivalExtraCheck"
                          Content="Дополнительные"
                          IsChecked="True"
                          Checked="ArrivalFilters_Changed"
                          Unchecked="ArrivalFilters_Changed"/>

                                            <StackPanel Margin="20,6,0,0">
                                                <CheckBox x:Name="ArrivalLowCostCheck"
                              Content="Малоценка"
                              IsChecked="True"
                              Checked="ArrivalFilters_Changed"
                              Unchecked="ArrivalFilters_Changed"/>

                                                <CheckBox x:Name="ArrivalInternalCheck"
                              Content="Внутренние"
                              IsChecked="True"
                              Checked="ArrivalFilters_Changed"
                              Unchecked="ArrivalFilters_Changed"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- ====== НАИМЕНОВАНИЕ ====== -->
                                        <TextBlock Text="Наименование"
                       FontWeight="SemiBold"
                       Margin="0,12,0,6"/>

                                        <ScrollViewer Height="180"
                          VerticalScrollBarVisibility="Auto">
                                            <WrapPanel x:Name="ArrivalNamesPanel"
                           Margin="0,6,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Width="400"/>
                                        </ScrollViewer>

                                        <!-- ====== ПЕРИОД ====== -->
                                        <TextBlock Text="Период"
                       FontWeight="SemiBold"
                       Margin="0,12,0,4"/>

                                        <StackPanel Orientation="Horizontal">
                                            <DatePicker x:Name="ArrivalDateFrom"
                Margin="0,0,8,0"
                SelectedDateChanged="ArrivalFilters_Changed"
                Width="150"/>

                                            <TextBlock Text=" — "
               VerticalAlignment="Center"
               Margin="0,0,8,0"/>

                                            <DatePicker x:Name="ArrivalDateTo"
                SelectedDateChanged="ArrivalFilters_Changed"
                Width="150"/>
                                        </StackPanel>


                                        <!-- ====== КНОПКИ ====== -->
                                        <StackPanel Orientation="Horizontal"
            HorizontalAlignment="Right"
            Margin="0,20,0,0">

                                            <Button Content="🔄 Сбросить фильтры"
            Width="160"
            Height="34"
            Padding="10,0"
            Background="#EFEFF4"
            BorderBrush="#D0D0D5"
            Foreground="#444"
            FontSize="13"
            FontWeight="SemiBold"
            Click="ArrivalClearFilters_Click"/>
                                        </StackPanel>



                                    </StackPanel>

                                </Border>
                            </Grid>



                            <!-- ====== ПАНЕЛЬ ДОБАВЛЕНИЯ (ОКНО СВЕРХУ) ====== -->
                            <Border x:Name="ArrivalPopup"
                Background="#AA000000"
                Visibility="Collapsed"
                Panel.ZIndex="10" Grid.ColumnSpan="2">
                                <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <Border Background="White"
                        CornerRadius="6"
                        Padding="10"
                        Width="800"
                        MinHeight="300">

                                        <StackPanel>
                                            <local:ArrivalControl x:Name="ArrivalPanel"/>

                                            <Button Content="✖ Закрыть"
                                                               HorizontalAlignment="Right"
                                                               Width="120"
                                                               Height="32"
                                                               Margin="0,10,0,0"
                                                               Click="HideArrivalButton_Click"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </Border>

                        </Grid>
                    </TabItem>
                    <TabItem Header="ОТ">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <Button Style="{StaticResource PrimaryButton}" Click="AddOtRow_Click">➕ Добавить запись</Button>
                                <Button Style="{StaticResource SecondaryButton}" Click="MarkSelectedRepeatDone_Click">✅ Повторный пройден (выбранная строка)</Button>
                                <Button Style="{StaticResource SecondaryButton}" Click="MarkSelectedPersonDismissed_Click">🚫 Нет на объекте</Button>
                                <Button Style="{StaticResource SecondaryButton}" Click="DeleteSelectedOtRow_Click">🗑 Удалить выбранную строку</Button>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="Поиск по ФИО:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBox x:Name="OtSearchTextBox"
                                         Width="320"
                                         VerticalContentAlignment="Center"
                                         TextChanged="OtSearchTextBox_TextChanged"/>
                            </StackPanel>

                            <DataGrid x:Name="OtJournalGrid"
                                      Grid.Row="2"
                                      AutoGenerateColumns="False"
                                      ColumnWidth="SizeToCells"
                                       CanUserResizeColumns="False"
                                      CanUserAddRows="False"
                                      CanUserDeleteRows="True"
                                      RowStyle="{StaticResource OtDueRowStyle}"
                                      RowEditEnding="OtJournalGrid_RowEditEnding"
                                      CellEditEnding="OtJournalGrid_CellEditEnding"
                                      PreviewKeyDown="OtJournalGrid_PreviewKeyDown">
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Header="Дата" Width="SizeToCells">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding InstructionDate, StringFormat=dd.MM.yyyy}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                        <DataGridTemplateColumn.CellEditingTemplate>
                                            <DataTemplate>
                                                <DatePicker SelectedDate="{Binding InstructionDate, UpdateSourceTrigger=PropertyChanged}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellEditingTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Header="ФИО" Width="SizeToCells">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                    <TextBlock Text="{Binding FullNameDisplay}" TextWrapping="Wrap"/>
                                                </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                        <DataGridTemplateColumn.CellEditingTemplate>
                                            <DataTemplate>
                                                <TextBox Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}"
                                                        
                                                         TextWrapping="NoWrap"
                                                         VerticalContentAlignment="Center"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellEditingTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Header="Специальность" Width="SizeToCells">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Specialty}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                        <DataGridTemplateColumn.CellEditingTemplate>
                                            <DataTemplate>
                                                <ComboBox IsEditable="True"
                                                          IsTextSearchEnabled="True"
                                                          StaysOpenOnEdit="True"
                                                          ItemsSource="{Binding ElementName=RootWindow, Path=Specialties}"
                                                          Text="{Binding Specialty, UpdateSourceTrigger=PropertyChanged}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellEditingTemplate>
                                    </DataGridTemplateColumn>
                                        <DataGridTextColumn Header="Разряд" Binding="{Binding Rank, UpdateSourceTrigger=PropertyChanged}" Width="SizeToCells"/>

                                        <DataGridTemplateColumn Header="Профессия" Width="SizeToCells">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding Profession}"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                            <DataGridTemplateColumn.CellEditingTemplate>
                                                <DataTemplate>
                                                    <ComboBox IsEditable="True"
                                                          IsTextSearchEnabled="True"
                                                          StaysOpenOnEdit="True"
                                                          ItemsSource="{Binding ElementName=RootWindow, Path=Professions}"
                                                          Text="{Binding Profession, UpdateSourceTrigger=PropertyChanged}"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellEditingTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTextColumn Header="Вид инструктажа" Binding="{Binding InstructionType}" Width="SizeToCells"/>
                                    <DataGridTextColumn Header="Номера инструкций по ОТ" Binding="{Binding InstructionNumbers}" Width="SizeToCells"/>
                                    <DataGridTextColumn Header="Период повторного (мес.)"
                                                        Binding="{Binding RepeatPeriodMonths, UpdateSourceTrigger=PropertyChanged}"
                                                        Width="SizeToCells"/>

                                    <DataGridCheckBoxColumn Header="Бригадир" Binding="{Binding IsBrigadier, UpdateSourceTrigger=PropertyChanged}" Width="SizeToCells"/>

                                    <DataGridTemplateColumn Header="Бригадир звена" Width="SizeToCells">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding BrigadierName}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                        <DataGridTemplateColumn.CellEditingTemplate>
                                            <DataTemplate>
                                                <ComboBox ItemsSource="{Binding ElementName=RootWindow, Path=BrigadierNames}"
                                                          SelectedItem="{Binding BrigadierName, UpdateSourceTrigger=PropertyChanged}"
                                                                                                                    IsEnabled="{Binding IsWorker}">
                                                    <ComboBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding StringFormat={}{0} - бригадир}"/>
                                                        </DataTemplate>
                                                    </ComboBox.ItemTemplate>
                                                </ComboBox>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellEditingTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTextColumn Header="След. повторный" Binding="{Binding NextRepeatDate, StringFormat=dd.MM.yyyy}" Width="SizeToCells" IsReadOnly="True"/>

                                    <DataGridTemplateColumn Header="Статус" Width="140">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding StatusLabel}" FontWeight="SemiBold"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Header="Действие" Width="SizeToCells">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="Отметить пройдено"
                                                        Padding="8,3"
                                                        Click="MarkRepeatDoneRow_Click"
                                                                                                                IsEnabled="{Binding IsActionEnabled}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Header="Сотрудник" Width="SizeToCells">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="Нет на объекте"
                                                        Padding="8,3"
                                                        Click="MarkPersonDismissedRow_Click"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                           
                        </Grid>
                    </TabItem>



                </TabControl>
            </Border>
        </Grid>
        </DockPanel>
        
        <Border x:Name="OtReminderPopup"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Margin="0,0,12,12"
            Padding="12"
            CornerRadius="10"
            Background="#1F2937"
            Visibility="Collapsed"
            Panel.ZIndex="999">
            <StackPanel>
                <TextBlock Text="Напоминание по ОТ"
                       Foreground="White"
                       FontWeight="SemiBold"/>
                <TextBlock x:Name="OtReminderText"
                       Margin="0,4,0,0"
                       Foreground="#F9FAFB"
                       TextWrapping="Wrap"
                       MaxWidth="320"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
