<Window x:Class="ConstructionControl.ObjectSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Настройки объекта"
        Width="420"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F6F7FB">

    <Border Background="White"
            CornerRadius="10"
            Padding="20"
            Margin="10">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock Text="Параметры объекта"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Foreground="#2B2B2B"
                       Margin="0,0,0,15"/>

            <!-- Название -->
            <StackPanel Grid.Row="1" Margin="0,0,0,10">
                <TextBlock Text="Название объекта"
                           Foreground="#555"
                           Margin="0,0,0,4"/>
                <TextBox x:Name="NameBox"
                         Height="34"
                         Padding="10,6"
                         Background="#FAFAFA"
                         BorderBrush="#D0D4DA"
                         BorderThickness="1"/>
            </StackPanel>

            <!-- Количество блоков -->
            <StackPanel Grid.Row="2" Margin="0,0,0,10">
                <TextBlock Text="Количество блоков"
                           Foreground="#555"
                           Margin="0,0,0,4"/>
                <TextBox x:Name="BlocksBox"
                         Height="34"
                         Padding="10,6"
                         Background="#FAFAFA"
                         BorderBrush="#D0D4DA"
                         BorderThickness="1"
                         TextChanged="BlocksBox_TextChanged"/>
            </StackPanel>

            <!-- Одинаковые этажи -->
            <CheckBox x:Name="SameFloorsCheck"
                      Grid.Row="3"
                      Content="Одинаковое количество этажей во всех блоках"
                      Margin="0,0,0,10"
                      Foreground="#333"
                      Checked="SameFloorsChanged"
                      Unchecked="SameFloorsChanged"/>

            <!-- Этажи одинаковые -->
            <StackPanel x:Name="SameFloorsPanel"
                        Grid.Row="4"
                        Margin="0,0,0,10">
                <TextBlock Text="Этажей в блоке"
                           Foreground="#555"
                           Margin="0,0,0,4"/>
                <TextBox x:Name="FloorsPerBlockBox"
                         Height="34"
                         Padding="10,6"
                         Background="#FAFAFA"
                         BorderBrush="#D0D4DA"
                         BorderThickness="1"/>
            </StackPanel>

            <!-- Этажи по блокам -->
            <DataGrid x:Name="FloorsByBlockGrid"
                      Grid.Row="4"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      Visibility="Collapsed"
                      Height="120"
                      GridLinesVisibility="None"
                      BorderThickness="1"
                      BorderBrush="#E5E7EB"
                      Background="White">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Блок"
                                        Binding="{Binding Block}"
                                        IsReadOnly="True"/>
                    <DataGridTextColumn Header="Этажей"
                                        Binding="{Binding Floors, UpdateSourceTrigger=PropertyChanged}"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Низ -->
            <StackPanel Grid.Row="5"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,15,0,0">

                <CheckBox x:Name="BasementCheck"
                          Content="Есть подвал"
                          VerticalAlignment="Center"
                          Margin="0,0,20,0"/>

                <Button Content="Отмена"
                        Width="100"
                        Height="34"
                        Margin="0,0,10,0"
                        Background="#E5E7EB"
                        BorderThickness="0"
                        Click="Cancel_Click"/>

                <Button Content="Сохранить"
                        Width="110"
                        Height="34"
                        Background="#2563EB"
                        Foreground="White"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Click="Ok_Click"/>
            </StackPanel>

        </Grid>
    </Border>
</Window>
