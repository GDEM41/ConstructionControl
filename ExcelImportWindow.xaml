<Window x:Class="ConstructionControl.ExcelImportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Импорт из Excel"
        Height="550"
        Width="1100"
        WindowStartupLocation="CenterOwner"
        Background="#F6F7FB">

    <Window.Resources>
      

            <!-- Тень для выпадающего списка -->
            <DropShadowEffect x:Key="ComboShadow"
                      Color="Black"
                      Opacity="0.12"
                      BlurRadius="12"
                      ShadowDepth="2"/>

            <!-- дальше твои стили ModernComboBox, ModernRadio и т.д. -->

            <!-- ====== ComboBox стиль в стиле pill ====== -->
        <Style x:Key="PillComboBox" TargetType="ComboBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="Toggle"
                                  Grid.Column="2"
                                  Focusable="False"
                                  ClickMode="Press"
                                  IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                  Background="{TemplateBinding Background}"
                                  BorderBrush="{TemplateBinding BorderBrush}"
                                  BorderThickness="{TemplateBinding BorderThickness}"
                                  Padding="10,4"
                                  Cursor="Hand">
                                <DockPanel>
                                    <ContentPresenter VerticalAlignment="Center"/>
                                    <TextBlock Text="▾" Margin="8,0,0,0" Foreground="#6B7280"/>
                                </DockPanel>
                            </ToggleButton>

                            <Popup x:Name="Popup"
                           Placement="Bottom"
                           AllowsTransparency="True"
                           StaysOpen="False"
                           IsOpen="{TemplateBinding IsDropDownOpen}">
                                <Border Background="White" CornerRadius="6" BorderBrush="#D1D5DB" BorderThickness="1">
                                    <ScrollViewer>
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#111827"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="Bd"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8"/>

                            <ContentPresenter Margin="10,0,28,0"
                                      VerticalAlignment="Center"/>

                            <ToggleButton x:Name="PART_ToggleButton"
              Grid.Column="1"
              Background="Transparent"
              BorderThickness="0"
              Focusable="False"
              Cursor="Hand"
              IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}">
                                <Path Width="12"
          Height="8"
          Margin="0,0,10,0"
          Fill="#6B7280"
          Data="M 0 0 L 12 0 L 6 8 Z"/>
                            </ToggleButton>


                            <Popup x:Name="PART_Popup"
                           Placement="Bottom"
                           AllowsTransparency="True"
                           Focusable="False"
                           IsOpen="{TemplateBinding IsDropDownOpen}"
                           PopupAnimation="Fade">

                                <Border Margin="0,4,0,0"
                                Background="White"
                                BorderBrush="#D1D5DB"
                                BorderThickness="1"
                                CornerRadius="6"
                                SnapsToDevicePixels="True"
                                Padding="4"
                                Effect="{DynamicResource ComboShadow}">
                                    <ScrollViewer CanContentScroll="True"
                                          VerticalScrollBarVisibility="Auto">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#F3F4F6"/>
                            </Trigger>

                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Padding" Value="10,6"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ComboBoxItem">
                                    <Border x:Name="ItemBd"
                                    CornerRadius="6"
                                    Background="Transparent"
                                    Padding="{TemplateBinding Padding}">
                                        <ContentPresenter/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="ItemBd" Property="Background" Value="#E5E7EB"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="ItemBd" Property="Background" Value="#2563EB"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>


        <Style x:Key="ModernRadio" TargetType="RadioButton">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="Bd"
                        Background="#E5E7EB"
                        BorderBrush="#D1D5DB"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="10,6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#2563EB"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#1D4ED8"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#F3F4F6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <!-- Popup: тенюшка и нормальное позиционирование -->
        <Style TargetType="Popup">
            <Setter Property="AllowsTransparency" Value="True"/>
        </Style>



        <Style x:Key="PillButton" TargetType="Button">
            <Setter Property="Padding" Value="14,6"/>
            <Setter Property="Margin" Value="6,0,0,0"/>
            <Setter Property="Background" Value="#E5E7EB"/>
            <Setter Property="Foreground" Value="#111827"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                        CornerRadius="6"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#F3F4F6"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#D1D5DB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="PrimaryButton" BasedOn="{StaticResource PillButton}" TargetType="Button">
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#1D4ED8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                        CornerRadius="6"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#3B82F6"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#1D4ED8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="SquareIconButton" TargetType="Button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="#E5E7EB"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="6,0,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                        CornerRadius="6"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#F3F4F6"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#D1D5DB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>


    <Border Background="White"
            CornerRadius="10"
            Padding="15"
            Margin="10">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ===== Заголовок ===== -->
            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="Импорт из Excel"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="#2B2B2B"/>
                <TextBlock x:Name="FilePathText"
                           Foreground="#6B7280"
                           FontSize="12"
                           TextWrapping="Wrap"/>
            </StackPanel>

            <!-- ===== Основная область ===== -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="260"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Листы Excel -->
                <Border Background="#FAFAFA"
                        BorderBrush="#E5E7EB"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="8">

                    <StackPanel>
                        <TextBlock Text="Листы Excel"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,6"/>

                        <ListBox x:Name="SheetsList"
                                 Height="320"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 SelectionChanged="SheetsList_SelectionChanged"/>
                    </StackPanel>
                </Border>

                <!-- Разделитель -->
                <GridSplitter Grid.Column="1"
                              Width="6"
                              Background="#E5E7EB"
                              HorizontalAlignment="Stretch"/>

                <!-- Предпросмотр -->
                <Border Grid.Column="2"
                        Background="#FAFAFA"
                        BorderBrush="#E5E7EB"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="8">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Предпросмотр листа"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,6"/>

                        <DataGrid x:Name="PreviewGrid"
                                  Grid.Row="1"
                                  AutoGenerateColumns="True"
                                  SelectionUnit="Cell"
                                  SelectionMode="Single"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="All"
                                  HorizontalGridLinesBrush="#E5E7EB"
                                  VerticalGridLinesBrush="#E5E7EB"
                                  Background="White"
                                  BorderThickness="0"
                                  SelectedCellsChanged="PreviewGrid_SelectedCellsChanged"/>

                        <!-- Кнопки выбора -->
                        <WrapPanel Grid.Row="2"
                                   Margin="0,8,0,0"
                                   HorizontalAlignment="Right">

                            <Button Content="📅 Дата" Tag="Date" Click="SelectCell_Click" Margin="2"/>
                            <Button Content="🧱 Наименование" Tag="Material" Click="SelectCell_Click" Margin="2"/>
                            <Button Content="🔢 Кол-во" Tag="Quantity" Click="SelectCell_Click" Margin="2"/>

                            <Separator Width="12"/>

                            <Button Content="🧾 Позиция" Tag="Position" Click="SelectCell_Click" Margin="2"/>
                            <Button Content="📐 Ед. изм" Tag="Unit" Click="SelectCell_Click" Margin="2"/>
                            <Button Content="📦 Объем" Tag="Volume" Click="SelectCell_Click" Margin="2"/>
                            <Button Content="🏷 СТБ" Tag="Stb" Click="SelectCell_Click" Margin="2"/>

                            <Separator Width="12"/>

                            <Button Content="🚚 ТТН" Tag="Ttn" Click="SelectCell_Click" Margin="2"/>
                            <Button Content="🏭 Поставщик" Tag="Supplier" Click="SelectCell_Click" Margin="2"/>
                            <Button Content="📄 Паспорт" Tag="Passport" Click="SelectCell_Click" Margin="2"/>
                        </WrapPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- ===== Низ ===== -->
            <Grid Grid.Row="2" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="SelectedCellText"
          Margin="4,0,0,0"
           Foreground="#6B7280"
           FontSize="12"
           Text="Ячейка не выбрана"/>




                <!-- ===== Нижняя панель: тип импорта + шаблоны ===== -->
                <Grid Margin="12,10,12,10" HorizontalAlignment="Right">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">

                        <StackPanel.Resources>
                            <!-- Универсальные отступы между элементами -->
                            <Style TargetType="FrameworkElement">
                                <Setter Property="Margin" Value="8,0,0,0"/>
                            </Style>
                        </StackPanel.Resources>

                        <!-- Типы импорта -->
                        <!-- Тип импорта -->
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <StackPanel.Resources>
                                <Style TargetType="RadioButton">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="RadioButton">
                                                <ToggleButton x:Name="Tb"
                              IsChecked="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}}"
                              Background="#E5E7EB"
                              BorderBrush="#D1D5DB"
                              BorderThickness="1"
                              Padding="10,4"
                              Cursor="Hand">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </ToggleButton>

                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="Tb" Property="Background" Value="#2563EB"/>
                                                        <Setter TargetName="Tb" Property="BorderBrush" Value="#1D4ED8"/>
                                                        <Setter Property="Foreground" Value="White"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>

                            </StackPanel.Resources>
                            <RadioButton x:Name="MainRadio"
             Style="{StaticResource ModernRadio}"
             Content="Основные"
             IsChecked="True"/>

                            <RadioButton x:Name="ExtraRadio"
             Style="{StaticResource ModernRadio}"
             Content="Дополнительные"/>


                            <!-- выпадающий тип допов -->
                            <ComboBox x:Name="ExtraTypeBox"
          Style="{StaticResource ModernComboBox}"
          Width="150"
          Visibility="Collapsed">
                                <ComboBoxItem>Внутренние</ComboBoxItem>
                                <ComboBoxItem>Малоценка</ComboBoxItem>
                            </ComboBox>

                        </StackPanel>


                        <!-- Разделитель №1 -->
                        <Rectangle Fill="#D1D5DB"
                   Width="1"
                   Height="22"
                   Margin="12,0,12,0"/>

                        <!-- Шаблоны -->
                        <TextBlock Text="Шаблон:"
                   VerticalAlignment="Center"/>

                        <ComboBox x:Name="TemplatesBox"
          Style="{StaticResource ModernComboBox}"
          Width="200"/>



                        <Button Content="⟳" Style="{StaticResource SquareIconButton}" Click="RefreshTemplates_Click"/>
                        <Button Content="✖" Style="{StaticResource SquareIconButton}" Click="DeleteTemplate_Click"/>



                        <!-- Отображение текущего шаблона -->
                        <TextBlock x:Name="CurrentTemplateText"
                   VerticalAlignment="Center"
                   Foreground="#6B7280"/>

                        <!-- Разделитель №2 -->
                        <Rectangle Fill="#D1D5DB"
                   Width="1"
                   Height="22"
                   Margin="12,0,12,0"/>

                        <!-- Кнопки -->
                        <Button Content="⚙ Применить" Style="{StaticResource PillButton}" Click="ApplyTemplate_Click"/>
                        <Button Content="💾 Сохранить" Style="{StaticResource PillButton}" Click="SaveTemplate_Click"/>
                        <Button Content="🚀 Импорт" Style="{StaticResource PrimaryButton}" Click="Import_Click"/>

                    </StackPanel>
                </Grid>








            </Grid>
        </Grid>
    </Border>
</Window>
