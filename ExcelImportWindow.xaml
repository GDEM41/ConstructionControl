<Window x:Class="ConstructionControl.ExcelImportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Импорт из Excel"
        Height="550"
        Width="1100"
        WindowStartupLocation="CenterOwner"
        Background="#F6F7FB">

    <Border Background="White"
            CornerRadius="10"
            Padding="15"
            Margin="10">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ===== Заголовок ===== -->
            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="Импорт из Excel"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="#2B2B2B"/>
                <TextBlock x:Name="FilePathText"
                           Foreground="#6B7280"
                           FontSize="12"
                           TextWrapping="Wrap"/>
            </StackPanel>

            <!-- ===== Основная область ===== -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="260"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Листы Excel -->
                <Border Background="#FAFAFA"
                        BorderBrush="#E5E7EB"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="8">

                    <StackPanel>
                        <TextBlock Text="Листы Excel"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,6"/>

                        <ListBox x:Name="SheetsList"
                                 Height="320"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 SelectionChanged="SheetsList_SelectionChanged"/>
                    </StackPanel>
                </Border>

                <!-- Разделитель -->
                <GridSplitter Grid.Column="1"
                              Width="6"
                              Background="#E5E7EB"
                              HorizontalAlignment="Stretch"/>

                <!-- Предпросмотр -->
                <Border Grid.Column="2"
                        Background="#FAFAFA"
                        BorderBrush="#E5E7EB"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="8">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Предпросмотр листа"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,6"/>

                        <DataGrid x:Name="PreviewGrid"
                                  Grid.Row="1"
                                  AutoGenerateColumns="True"
                                  SelectionUnit="Cell"
                                  SelectionMode="Single"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="All"
                                  HorizontalGridLinesBrush="#E5E7EB"
                                  VerticalGridLinesBrush="#E5E7EB"
                                  Background="White"
                                  BorderThickness="0"
                                  SelectedCellsChanged="PreviewGrid_SelectedCellsChanged"/>

                        <!-- Кнопки выбора -->
                        <WrapPanel Grid.Row="2"
                                   Margin="0,8,0,0"
                                   HorizontalAlignment="Right">

                            <Button Content="📅 Дата" Tag="Date" Click="SelectCell_Click" Margin="2"/>
                            <Button Content="🧱 Наименование" Tag="Material" Click="SelectCell_Click" Margin="2"/>
                            <Button Content="🔢 Кол-во" Tag="Quantity" Click="SelectCell_Click" Margin="2"/>

                            <Separator Width="12"/>

                            <Button Content="🧾 Позиция" Tag="Position" Click="SelectCell_Click" Margin="2"/>
                            <Button Content="📐 Ед. изм" Tag="Unit" Click="SelectCell_Click" Margin="2"/>
                            <Button Content="📦 Объем" Tag="Volume" Click="SelectCell_Click" Margin="2"/>
                            <Button Content="🏷 СТБ" Tag="Stb" Click="SelectCell_Click" Margin="2"/>

                            <Separator Width="12"/>

                            <Button Content="🚚 ТТН" Tag="Ttn" Click="SelectCell_Click" Margin="2"/>
                            <Button Content="🏭 Поставщик" Tag="Supplier" Click="SelectCell_Click" Margin="2"/>
                            <Button Content="📄 Паспорт" Tag="Passport" Click="SelectCell_Click" Margin="2"/>
                        </WrapPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- ===== Низ ===== -->
            <Grid Grid.Row="2" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="SelectedCellText"
           Margin="1,15,874,10"
           Foreground="#6B7280"
           FontSize="12"
           Text="Ячейка не выбрана"/>




                <!-- ===== Нижняя панель: тип импорта + шаблоны ===== -->
                <Grid Grid.Row="2" Margin="12,10,12,10" HorizontalAlignment="Right">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">

                        <StackPanel.Resources>
                            <!-- Универсальные отступы между элементами -->
                            <Style TargetType="FrameworkElement">
                                <Setter Property="Margin" Value="8,0,0,0"/>
                            </Style>
                        </StackPanel.Resources>

                        <!-- Типы импорта -->
                        <!-- Тип импорта -->
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <StackPanel.Resources>
                                <Style TargetType="RadioButton">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="RadioButton">
                                                <Border x:Name="Border"
                                Padding="10,4"
                                CornerRadius="6"
                                Background="#E5E7EB"
                                BorderBrush="#D1D5DB"
                                BorderThickness="1"
                                Cursor="Hand">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="Border" Property="Background" Value="#2563EB"/>
                                                        <Setter TargetName="Border" Property="BorderBrush" Value="#1D4ED8"/>
                                                        <Setter Property="Foreground" Value="White"/>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="Border" Property="Background" Value="#E2E8F0"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Margin" Value="0,0,6,0"/>
                                </Style>
                            </StackPanel.Resources>

                            <RadioButton x:Name="MainRadio"
                 Content="Основные"
                 IsChecked="True"
                 VerticalAlignment="Center"/>

                            <RadioButton x:Name="ExtraRadio"
                 Content="Дополнительные"
                 VerticalAlignment="Center"/>

                            <!-- выпадающий тип допов -->
                            <ComboBox x:Name="ExtraTypeBox"
              Width="140"
              Height="32"
              VerticalAlignment="Center"
              Visibility="Collapsed"
              Margin="4,0,0,0">
                                <ComboBoxItem>Внутренние</ComboBoxItem>
                                <ComboBoxItem>Малоценка</ComboBoxItem>
                            </ComboBox>
                        </StackPanel>


                        <!-- Разделитель №1 -->
                        <Rectangle Fill="#D1D5DB"
                   Width="1"
                   Height="22"
                   Margin="12,0,12,0"/>

                        <!-- Шаблоны -->
                        <TextBlock Text="Шаблон:"
                   VerticalAlignment="Center"/>

                        <ComboBox x:Name="TemplatesBox"
                  Width="200"
                  Height="32"
                  VerticalContentAlignment="Center"
                  ToolTip="Выбор шаблона"/>

                        <Button Content="⟳"
                Width="32"
                Height="32"
                ToolTip="Обновить"
                Click="RefreshTemplates_Click"/>

                        <Button Content="✖"
                Width="32"
                Height="32"
                ToolTip="Удалить"
                Click="DeleteTemplate_Click"/>

                        <!-- Отображение текущего шаблона -->
                        <TextBlock x:Name="CurrentTemplateText"
                   VerticalAlignment="Center"
                   Foreground="#6B7280"/>

                        <!-- Разделитель №2 -->
                        <Rectangle Fill="#D1D5DB"
                   Width="1"
                   Height="22"
                   Margin="12,0,12,0"/>

                        <!-- Кнопки -->
                        <Button Content="⚙ Применить"
                Padding="12,4"
                Background="#E5E7EB"
                Foreground="#111"
                Click="ApplyTemplate_Click"/>

                        <Button Content="💾 Сохранить"
                Padding="12,4"
                Background="#9CA3AF"
                Foreground="White"
                Click="SaveTemplate_Click"/>

                        <Button Content="🚀 Импорт"
                Padding="14,4"
                Background="#2563EB"
                Foreground="White"
                FontWeight="SemiBold"
                Click="Import_Click"/>
                    </StackPanel>
                </Grid>








            </Grid>
        </Grid>
    </Border>
</Window>
