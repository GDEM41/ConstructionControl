<Window x:Class="ConstructionControl.ExcelImportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Импорт из Excel"
        Height="550"
        Width="1100"
        WindowStartupLocation="CenterOwner"
        Background="#F6F7FB">

    <Border Background="White"
            CornerRadius="10"
            Padding="15"
            Margin="10">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ===== Заголовок ===== -->
            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="Импорт из Excel"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="#2B2B2B"/>
                <TextBlock x:Name="FilePathText"
                           Foreground="#6B7280"
                           FontSize="12"
                           TextWrapping="Wrap"/>
            </StackPanel>

            <!-- ===== Основная область ===== -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="260"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Листы Excel -->
                <Border Background="#FAFAFA"
                        BorderBrush="#E5E7EB"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="8">

                    <StackPanel>
                        <TextBlock Text="Листы Excel"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,6"/>

                        <ListBox x:Name="SheetsList"
                                 Height="320"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 SelectionChanged="SheetsList_SelectionChanged"/>
                    </StackPanel>
                </Border>

                <!-- Разделитель -->
                <GridSplitter Grid.Column="1"
                              Width="6"
                              Background="#E5E7EB"
                              HorizontalAlignment="Stretch"/>

                <!-- Предпросмотр -->
                <Border Grid.Column="2"
                        Background="#FAFAFA"
                        BorderBrush="#E5E7EB"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="8">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Предпросмотр листа"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,6"/>

                        <DataGrid x:Name="PreviewGrid"
                                  Grid.Row="1"
                                  AutoGenerateColumns="True"
                                  SelectionUnit="Cell"
                                  SelectionMode="Single"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="All"
                                  HorizontalGridLinesBrush="#E5E7EB"
                                  VerticalGridLinesBrush="#E5E7EB"
                                  Background="White"
                                  BorderThickness="0"
                                  SelectedCellsChanged="PreviewGrid_SelectedCellsChanged"/>

                        <!-- Кнопки выбора -->
                        <WrapPanel Grid.Row="2"
                                   Margin="0,8,0,0"
                                   HorizontalAlignment="Right">

                            <Button Content="📅 Дата" Tag="Date" Click="SelectCell_Click" Margin="2"/>
                            <Button Content="🧱 Наименование" Tag="Material" Click="SelectCell_Click" Margin="2"/>
                            <Button Content="🔢 Кол-во" Tag="Quantity" Click="SelectCell_Click" Margin="2"/>

                            <Separator Width="12"/>

                            <Button Content="🧾 Позиция" Tag="Position" Click="SelectCell_Click" Margin="2"/>
                            <Button Content="📐 Ед. изм" Tag="Unit" Click="SelectCell_Click" Margin="2"/>
                            <Button Content="📦 Объем" Tag="Volume" Click="SelectCell_Click" Margin="2"/>
                            <Button Content="🏷 СТБ" Tag="Stb" Click="SelectCell_Click" Margin="2"/>

                            <Separator Width="12"/>

                            <Button Content="🚚 ТТН" Tag="Ttn" Click="SelectCell_Click" Margin="2"/>
                            <Button Content="🏭 Поставщик" Tag="Supplier" Click="SelectCell_Click" Margin="2"/>
                            <Button Content="📄 Паспорт" Tag="Passport" Click="SelectCell_Click" Margin="2"/>
                        </WrapPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- ===== Низ ===== -->
            <Grid Grid.Row="2" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>





                <!-- ===== Нижняя панель: тип импорта + шаблоны ===== -->
                <Grid Grid.Row="2"
      Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>

                        <!-- Тип импорта -->
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="160"/>

                        <ColumnDefinition Width="30"/>

                        <!-- Шаблоны и импорт -->
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Инфо о выбранной ячейке -->
                    <TextBlock Grid.Column="0"
               x:Name="SelectedCellText"
               VerticalAlignment="Center"
               Foreground="#6B7280"
               Text="Ячейка не выбрана"/>

                    <!-- Основные / Дополнительные -->
                    <RadioButton Grid.Column="1"
                 x:Name="MainRadio"
                 Content="Основные"
                 IsChecked="True"
                 VerticalAlignment="Center"
                 Margin="0,0,10,0"/>

                    <RadioButton Grid.Column="2"
                 x:Name="ExtraRadio"
                 Content="Дополнительные"
                 VerticalAlignment="Center"/>

                    <!-- Подтип допов -->
                    <ComboBox Grid.Column="4"
          x:Name="ExtraTypeBox"
          Width="60"
          Height="30"
          VerticalContentAlignment="Center"
          VerticalAlignment="Center"
          Visibility="Hidden"/>

                    <!-- Кнопки справа -->

                </Grid>





                <StackPanel Grid.Column="1"
                            Orientation="Horizontal">

                    <ComboBox x:Name="TemplatesCombo"
                         Height="30"
                         Padding="70"
                         Margin="0,0,6,0"
                              SelectionChanged="TemplatesCombo_SelectionChanged"/>

                    <Button Content="✅ Применить"
                         Height="30"
                         Padding="14,6"
                         Margin="0,0,6,0"
                            Click="ApplyTemplate_Click"/>

                    <Button Content="💾 Сохранить шаблон"
                         Height="32"
                         Padding="14,6"
                         Margin="0,0,6,0"
                            Click="SaveTemplate_Click"/>

                    <Button Content="Импорт"
                            Background="#2563EB"
                            Foreground="White"
                            FontWeight="SemiBold"
                                                     Height="32"
                         Padding="14,6"
                         Margin="0,0,6,0"
                            Click="Import_Click"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
